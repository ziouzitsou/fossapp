# FOSSAPP Production Environment Variables
# Copy this file to .env.production and fill in your values
# NEVER commit .env.production to version control

# ============================================
# NextAuth Configuration
# ============================================

NEXTAUTH_URL=https://main.fossapp.online
NEXTAUTH_SECRET=your-long-random-secret-key-here

# ============================================
# Google OAuth (from Google Cloud Console)
# ============================================

GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ============================================
# Supabase Configuration
# ============================================

NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# ============================================
# Application Configuration
# ============================================

NODE_ENV=production
PORT=8080
HOSTNAME=0.0.0.0
ALLOWED_DOMAIN=foss.gr

# ============================================
# Autodesk Platform Services (APS) - Tiles Builder
# ============================================

APS_CLIENT_ID=your-aps-client-id
APS_CLIENT_SECRET=your-aps-client-secret
APS_REGION=EMEA
APS_NICKNAME=fossapp
APS_ACTIVITY_NAME=fossappTileAct2
APS_BUNDLE_NAME=tilebundle

# ============================================
# Google Drive Configuration
# ============================================

GOOGLE_DRIVE_HUB_ID=your-shared-drive-id
GOOGLE_DRIVE_PROJECTS_FOLDER_ID=your-projects-folder-id

# ============================================
# OpenRouter API (Playground LLM)
# ============================================

OPENROUTER_API_KEY=sk-or-v1-your-key-here

# ============================================
# Feedback Assistant (AI Chat)
# ============================================

FEEDBACK_CHAT_OPENROUTER_KEY=sk-or-v1-your-feedback-key-here
FEEDBACK_CHAT_MODEL=anthropic/claude-sonnet-4
FEEDBACK_CHAT_MAX_TOKENS=4096

# ============================================
# Resend Email Service
# ============================================

RESEND_API_KEY=re_your-resend-api-key
FEEDBACK_NOTIFICATION_EMAIL=development@foss.gr
