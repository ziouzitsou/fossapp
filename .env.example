# FOSSAPP Environment Configuration
# Copy this file to .env.local and fill in the actual values
# NEVER commit .env.local or .env.production to version control

# ============================================
# NextAuth.js Configuration
# ============================================

# Application URL (include port for local development)
# Development: http://localhost:8080
# Production: https://main.fossapp.online
NEXTAUTH_URL=http://localhost:8080

# NextAuth Secret (generate with: openssl rand -base64 32)
# IMPORTANT: Use a different secret for each environment
NEXTAUTH_SECRET=your-secret-key-here-generate-with-openssl-rand-base64-32

# ============================================
# Google OAuth Configuration
# ============================================

# Get these from: https://console.cloud.google.com/
# Create OAuth 2.0 credentials with authorized redirect URI:
# http://localhost:8080/api/auth/callback/google (development)
# https://main.fossapp.online/api/auth/callback/google (production)

GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Allowed Google Workspace domain (server-side validation)
# Only users from this domain can sign in
ALLOWED_DOMAIN=foss.gr

# ============================================
# Supabase Configuration
# ============================================

# Supabase project URL (safe to expose to client)
NEXT_PUBLIC_SUPABASE_URL=https://hyppizgiozyyyelwdius.supabase.co

# Supabase anonymous key (safe to expose to client)
# Limited permissions - controlled by Row Level Security
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# Supabase service role key (NEVER expose to client!)
# Full admin permissions - only use server-side
# Get from: Project Settings > API > service_role key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# ============================================
# Google Drive Configuration (Projects & Tiles)
# ============================================

# HUB Shared Drive ID
# Get from: Google Drive URL when viewing the shared drive
# Example: https://drive.google.com/drive/folders/0AIqVhsENOYQjUk9PVA
GOOGLE_DRIVE_HUB_ID=your-shared-drive-id

# Projects folder ID within the HUB drive
# This is where new project folders are created
GOOGLE_DRIVE_PROJECTS_FOLDER_ID=your-projects-folder-id

# Archive folder ID for archived projects
GOOGLE_DRIVE_ARCHIVE_FOLDER_ID=your-archive-folder-id

# Windows Explorer path for TILES folder (Google Drive sync)
# Used for "Open in Explorer" feature - adjust to your local sync path
# Example: F:/Shared drives/HUB/RESOURCES/TILES
NEXT_PUBLIC_TILES_EXPLORER_PATH=F:/Shared drives/HUB/RESOURCES/TILES

# NOTE: Service account credentials file required at:
# credentials/google-service-account.json
# Get from: https://console.cloud.google.com/ > Service Accounts
# Requires: Drive API enabled, service account added to Shared Drive

# ============================================
# Autodesk Platform Services (APS) Configuration
# ============================================

# APS Client ID and Secret for Design Automation and Model Derivative
# Get from: https://aps.autodesk.com/myapps
# CRITICAL: These credentials provide full access to APS resources
# NEVER commit these values or expose them to the client
APS_CLIENT_ID=your-aps-client-id
APS_CLIENT_SECRET=your-aps-client-secret

# APS Region (US or EMEA)
# Use EMEA for European data residency
APS_REGION=EMEA

# APS Design Automation configuration
# These define the app bundle and activity for DWG processing
APS_NICKNAME=fossapp
APS_ACTIVITY_NAME=fossappTileAct2
APS_BUNDLE_NAME=tilebundle

# ============================================
# OpenRouter API (Playground LLM)
# ============================================

# OpenRouter API Key (for Playground LLM features)
# Get from: https://openrouter.ai/
OPENROUTER_API_KEY=sk-or-v1-your-key-here

# ============================================
# Development Only Configuration
# ============================================

# Development authentication bypass
# WARNING: NEVER set to true in production!
# Allows access to protected routes without Google OAuth
# See: src/lib/use-dev-session.ts
NEXT_PUBLIC_BYPASS_AUTH=false

# ============================================
# Optional Configuration
# ============================================

# Node environment (set automatically by Next.js)
# NODE_ENV=development

# Enable verbose logging (optional)
# NEXT_PUBLIC_DEBUG=false
